<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:id="@+id/linearlayout"
    android:orientation="horizontal"
    android:background="@drawable/plan_bg">

    <TextView
        android:id="@+id/being_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:textSize="40sp"/>

    <TextView
        android:id="@+id/being_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/being_level"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="20dp"
        android:textSize="24sp" />
    <TextView
        android:id="@+id/being_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/being_level"
        android:layout_below="@+id/being_name"
        android:layout_marginLeft="100dp"
        android:layout_marginBottom="10dp"
        android:text="剩余番茄钟："
        android:textSize="15sp"/>
    <TextView
        android:id="@+id/being_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/being_1"
        android:layout_below="@+id/being_name"
        android:textSize="15sp"/>

    <ImageButton
        android:id="@+id/go_tomato"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentRight="true"
        android:background="@mipmap/gotomato"/>
</RelativeLayout>